<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL Configuracion FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <navigation-rule>
            <from-view-id>/faces/login.xhtml</from-view-id>
            <navigation-case>
                <from-outcome>login</from-outcome>
                <to-view-id>/faces/index.xhtml</to-view-id>
            </navigation-case>
        </navigation-rule>
        <resource-bundle>
            <base-name>/Bundle/personaFormacion</base-name>
            <var>bundlePersonaFormacion</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/Bundle/persona</base-name>
            <var>bundlePersona</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/Bundle/subCategoriaCualificacion</base-name>
            <var>bundleSubCategoriaCualificacion</var>
        </resource-bundle>
    </application>
</faces-config>
